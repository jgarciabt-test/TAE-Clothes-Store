package com.tae.store.adapters;

import java.util.ArrayList;

import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentManager;
import android.support.v4.app.FragmentStatePagerAdapter;

import com.tae.store.fragments.ItemPageFragment;
import com.tae.store.model.Product;

public class IdemPagerAdapter extends FragmentStatePagerAdapter {

	private ArrayList<ItemPageFragment> list;
	
	public IdemPagerAdapter(FragmentManager fm, ArrayList<Product> products) {
		super(fm);
		
		list = new ArrayList<ItemPageFragment>();
		for(int i=0;i<products.size();i++){
			list.add(new ItemPageFragment(products.get(i)));
		}
	}

	@Override
	public Fragment getItem(int position) {
		return list.get(position);
	}

	@Override
	public int getCount() {
		return list.size();
	}

}
